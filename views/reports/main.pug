extends ../layout-reports
block style
  style.
    .dc-chart .axis text{
      fill: white;
    }
    .dc-legend {
      fill: white;
    }
    .dc-chart g.row text {
      fill: white;
    }
   .chart {
      position: relative;
      width: 100%;
      height: auto;
      overflow: hidden;
      padding-bottom: 56.26%;
    }
    #eventChart {
      top: 0;
      left: 0;
      width: auto;
      height: auto;
    }
    #hourSeries {
      top: 0;
      left: 0;
      width: auto;
      height: auto;
    }
block scripts
  script(type='text/javascript', src='/assets/annie/js/d3_dc.js')
  script(type='text/javascript', src='/assets/annie/js/crossfilter.js')
  script(type='text/javascript', src='/assets/annie/js/dc.js')
  script(type='text/javascript', src='/assets/annie/js/colorbrewer.js')
  script(src='/scripts/report.js')
block content
  main.layout-contents.padding
    div.layout-contents-inner
      section
        header.page-title
          h1.title Reports
          p.count Total
            mark.report 836
        fieldset.search-container
          legend search
            div.right-content-view
              label(for='') List view
                select.select(name='', id='')
                  option(value='') 15
            div.left-content-view
              span.datepicker
                input(type='text', name='daterange', id='', value='')
                select.select(name='', id='')
                  option(value='') Zone ID
                select.select(name='', id='')
                  option(value='') Node ID
                select.select(name='', id='')
                  option(value='') ALL
              button.btn-submit.search(type='submit') SEARCH        
        script.
          $(document).ready(function() {
            report();
            var start = moment().subtract(29, 'days');
            var end = moment();
            $('input[name="daterange"]')
              .daterangepicker(
              {
                "autoApply" : true,
                startDate : start,
                endDate : end,
                locale : {
                  format : 'YYYY-MM-DD'
                }
              },
              function(start, end, label) {
                console.log("New date range selected: ' + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD') + ' (predefined range: ' + label + ')");
              });
          });
        div.map-container
          div.inner             
        ul.list-reports
          li
            div.chart(style='text-align:center')
              #eventChart(style='margine:0 auto;')
          li
            div.chart
              #hourSeries
          li
            div.chart
              #avgCom
              //- #volumeChart
          li
            div.chart
              #avgVib
          li
            div.chart
          li
            div.chart
              .radarChart
