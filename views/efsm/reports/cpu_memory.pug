extends ../layout-type01
block style    
  link(type='text/css', rel='stylesheet', href='/efsm/assets/css/dc.css') 
  link(type='text/css', rel='stylesheet', href='/efsm/css/chart_style.css')
  link(rel='stylesheet', type='text/css', href='/common/assets/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css')
block script
  script(type='text/javascript', src='/efsm/assets/scripts/d3_dc.js')
  script(type='text/javascript', src='/efsm/assets/scripts/crossfilter.js')
  script(type='text/javascript', src='/efsm/assets/scripts/dc.js')  
  script(type='text/javascript', src='/efsm/assets/scripts/colorbrewer.js')  
  script(type='text/javascript', src='/common/assets/plugins/datatables/media/js/jquery.dataTables.min.js')
  script(type='text/javascript', src='/common/assets/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js')
  script(src='/common/assets/scripts/page/table-managed.js')
  script(type='text/javascript', src="/common/scripts/util.js")
  script(src='/efsm/scripts/report_cpu_memory.js')
block content  
  .container-fluid
    .page-content
      .breadcrumbs
        h1 CPU / Memory
        ol.breadcrumb
          li
            a(href='#') Home
          li
            a(href='#') Reports
          li.active OverView
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase.font-blue-sharp Set date
                span.caption-helper  Date range 
            .portlet-body.form
               form.form-horizontal.form-bordered(onsubmit="return false;")
                .form-body
                  .form-group.last
                    .col-md-1
                    label.control-label.col-md-2 Date Range
                    .col-md-4
                      .input-group.input-large.date-picker.input-daterange(data-date='2017-01-01', data-date-format='yyyy-mm-dd')
                        input#sdate.form-control(type='text', name='from' value='')
                        span.input-group-addon to
                        input#edate.form-control(type='text', name='to' value='')
                    label.control-label.col-md-1 
                    .col-md-4.form-inline                     
                      button#btn_search.btn.blue
                        i.fa.fa-search Search
      a(href='javascript:dc.filterAll(); dc.renderAll();') Reset All
      .row
        .col-md-4
          .portlet.light(style='height:450px; ')
            .portlet-title
              .caption
                span.caption-subject.bold.uppercase.font-green-haze Cpu
                span.caption-helper  system.cpu.system
              .actions
                a.btn.btn-default.btn-sm(href='#')
                  i.fa.fa-print
                  |  Print
                a.collapse(href='javascript:;')
                a.btn.btn-icon-only.btn-default.fullscreen(href='#')
            .portlet-body
              .chart(style='height:400px; ')
                #cpuChart
        .col-md-4
          .portlet.light.bordered(style='height:450px; ')
            .portlet-title
              .caption
                span.caption-subject.bold.uppercase.font-green-haze Memory
                span.caption-helper  system.memory.actual.used.pct
              .actions
                a.btn.btn-default.btn-sm(href='#')
                  i.fa.fa-print
                  |  Print
                a.collapse(href='javascript:;')
                a.btn.btn-icon-only.btn-default.fullscreen(href='#')
            .portlet-body
              .chart(style='height:400px; ')
                #memoryChart
        .col-md-4
          .portlet.light(style='height:450px; ')
            .portlet-title
              .caption
                span.caption-subject.bold.uppercase.font-green-haze Filesystem
                span.caption-helper  system.filesystem.used.pct
              .actions
                a.btn.btn-default.btn-sm(href='#')
                  i.fa.fa-print
                  |  Print
                a.collapse(href='javascript:;')
                a.btn.btn-icon-only.btn-default.fullscreen(href='#')
            .portlet-body
              .chart(style='height:450px; ')
                #filesystemChart
      .row                  
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption
                span.caption-subject.bold.uppercase.font-green-haze Process List
                span.caption-helper
              .actions
                a.btn.btn-default.btn-sm(href='#')
                  i.fa.fa-print
                  |  Print
                a.collapse(href='javascript:;')
                a.btn.btn-icon-only.btn-default.fullscreen(href='#')              
            #sample             
    p.copyright Copyright M2U Technology All rights reserved.
  a.go2top(href='#index')
    i.icon-arrow-up