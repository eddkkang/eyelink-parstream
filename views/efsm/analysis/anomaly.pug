extends ../layout-type01
block style    
  link(rel='stylesheet', href='/efsm/css/anomaly.css')
  link(type='text/css', rel='stylesheet', href='/efsm/css/chart_style.css')
block script
  script(type='text/javascript', src='/efsm/assets/scripts/d3_dc.js')  
  script(type='text/javascript', src='/efsm/assets/scripts/colorbrewer.js')
  script(src='/efsm/assets/scripts/vue.min.js')
  script(type='text/javascript', src="/common/scripts/util.js")
  script(type='text/javascript', src='/efsm/scripts/analysis_anomaly.js')  
block content
  .container-fluid
    .page-content
      .breadcrumbs
        h1 Anomaly
        ol.breadcrumb
          li
            a(href='/dashboard') Home
          li
            a(href='#') Analysis
          li.active Anomaly      
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase Anomaly Chart
                span.caption-helper  by Voltage
            .portlet-body
              .chart(style='height:400px;')
                #voltage
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase Anomaly Chart
                span.caption-helper  by Ampere
            .portlet-body
              .chart(style='height:400px;')
                #ampere
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase Anomaly Chart
                span.caption-helper  by Active Power
            .portlet-body
              .chart(style='height:400px;')
                #active_power
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase Anomaly Chart
                span.caption-helper  by Power Factor
            .portlet-body
              .chart(style='height:400px;')
                #power_factor