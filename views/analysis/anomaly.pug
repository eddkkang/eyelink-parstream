extends ../layout-type01
block style
  link(rel='stylesheet', href='/assets/leaflet/dc.css')
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='/scripts/d3_timeseries.css')
  link(rel='stylesheet', type='text/css', href='/assets/annie/css/style.css')
  style.
    #Chart { font: 12px Arial;}
    path { 
        stroke: steelblue;
        stroke-width: 2;
        fill: none;
    }
    #real {
      width: 960px;
      height: 480px;
    }
    .line {
      fill: none;      
    }
    text {
      font-size: 0.5rem;
    }
    .axis path,
    .axis line {
        fill: none;
        stroke: grey;
        stroke-width: 1;
        shape-rendering: crispEdges;
    }     
    .graph .axis {
        stroke-width: 1;
    }
    .graph .axis .tick line {
        stroke: black;
    }
    .graph .axis .tick text {
        fill: black;
        font-size: 0.7em;
    }
    .graph .axis .domain {
        fill: none;
        stroke: black;
    }
    .graph .group {
        fill: none;
        stroke: black;
        stroke-width: 1.5;
    }
block script
  script(type='text/javascript', src='/assets/leaflet/d3.js')
  script(src='/assets/annie/js/vue.min.js')
  script(type='text/javascript', src='/assets/annie/js/colorbrewer.js')
  script(type='text/javascript', src="/scripts/util.js")
  script(src='/scripts/analysis_anomaly.js')  
  script.
    $(document).ready(function(e) {      
      getData();      
    });
