                a.btn.btn-icon-only.btn-default.fullscreen(href='#')
            .portlet-body
              .chart(style='height:340px;')
                #table                      
                  .panel.panel-card
                    .panel-title
                      h5(style='color:black;').no-margin.m-b Dual Area Chart
