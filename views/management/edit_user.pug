    .container-fluid
      .page-content
        .breadcrumbs
          h1 Edit User
          ol.breadcrumb
            li
              a(href='#') Home
            li
              a(href='#') Management
            li
              a(href='user_list.html') Users
            li.active Add User
        .row
          .col-md-12
            .portlet.light
              .portlet-title
                .caption
                  span.caption-subject.bold.uppercase.font-green-haze User Information
                  |  
                  span.caption-helper Lorem ipsum dolor sit amet
                .tools
                  a.reload(href='javascript:;')
                  a.remove(href='javascript:;')
              .portlet-body.from
                form.form-horizontal.form-bordered(action='#')
                  .form-body
                    each user in users
                      .form-group
                        label.control-label.col-md-3 User ID
                        .col-md-9
                          span #{user.user_id}                          
                      .form-group
                        label.control-label.col-md-3 Name
                        .col-md-9
                          input.form-control.form-control-inline.input-large(size='16', type='text', value=user.user_name, placeholder='Username')
                      .form-group
                        label.control-label.col-md-3 Password
                        .col-md-9
                          input.form-control.form-control-inline.input-large(size='16', type='text', value=user.user_pw, placeholder='password') 
                      .form-group.last
                        label.control-label.col-md-3 Select Role
                        .col-md-9
                          select.bs-select.form-control.input-large(data-show-subtext='true')
                            option #{user.user_role}
                            option  User
                            option  Asset manager
                            option Zone manager
                            option Super manager
                          span.tooltips.font-blue(data-container='body', data-placement='top', data-original-title='Lorem ipsum dolor sit amet, consectetur adipisicing elit')
                            i.icon-question
                #basic.modal.fade(tabindex='-1', role='basic', aria-hidden='true')
                  .modal-dialog
                    .modal-content
                      .modal-header
                        button.close(type='button', data-dismiss='modal', aria-hidden='true')
