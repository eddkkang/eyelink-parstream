extends ../layout-type01
block style
block script
block content
    .container-fluid
      .page-content
        .breadcrumbs
          h1 Edit User
          ol.breadcrumb
            li
              a(href='#') Home
            li
              a(href='#') Management
            li
              a(href='user_list.html') Users
            li.active Add User
        .row
          .col-md-12
            .portlet.light
              .portlet-title
                .caption
                  span.caption-subject.bold.uppercase.font-green-haze User Information
                  |  
                  span.caption-helper Lorem ipsum dolor sit amet
                .tools
                  a.reload(href='javascript:;')
                  a.remove(href='javascript:;')
              .portlet-body.from
                form.form-horizontal.form-bordered(action='/management/update_user', method='post')
                  .form-body
                    each user in users
                      .form-group
                        label.control-label.col-md-3 User ID
                        .col-md-9
                          span #{user.user_id}         
                          input(type='hidden', name='userid', value=user.user_id)                 
                      .form-group
                        label.control-label.col-md-3 Name
                        .col-md-9
                          input.form-control.form-control-inline.input-large(size='16', type='text', value=user.user_name, placeholder='Username', name='username')
                      .form-group
                        label.control-label.col-md-3 Password
                        .col-md-9
                          input.form-control.form-control-inline.input-large(size='16', type='text', value=user.user_pw, placeholder='password', name='password') 
                      .form-group
                        label.control-label.col-md-3 Email
                        .col-md-9
                          input.form-control.form-control-inline.input-large(size='16', type='text', value=user.user_email, placeholder='email', name='email') 
                      .form-group.last
                        label.control-label.col-md-3 Select Role
                        .col-md-9
                          select.bs-select.form-control.input-large(data-show-subtext='true', name='userrole')
                            option #{user.user_role}
                            option  User
                            option  Asset Manager
                            option Zone Manager
                            option Super Manager
                          span.tooltips.font-blue(data-container='body', data-placement='top', data-original-title='Lorem ipsum dolor sit amet, consectetur adipisicing elit')
                            i.icon-question            
                      .form-actions
                        button.btn.btn-default(type='button', onclick="location.href='/management/users'") Cancel
                        |  
                        button.btn.btn-default.blue(type='submit') Save
              .portlet-footer
      p.copyright Copyright M2U Technology All rights reserved.
      a.go2top(href='#index')
        i.icon-arrow-up